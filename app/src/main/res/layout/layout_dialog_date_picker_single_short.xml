<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.jgkj.grb.view.textview.BoldTextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:paddingBottom="10dp"
            android:text="取消"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />

        <com.jgkj.grb.view.textview.BoldTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#999999"
            android:textSize="13sp" />

        <com.jgkj.grb.view.textview.BoldTextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="确定"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="100dp"
        android:paddingTop="15dp"
        android:paddingEnd="100dp"
        android:paddingBottom="20dp">

        <com.jgkj.grb.view.datepicker.PickerView
            android:id="@+id/dpv_year_from"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="3" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="年"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <com.jgkj.grb.view.datepicker.PickerView
            android:id="@+id/dpv_month_from"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="月"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <com.jgkj.grb.view.datepicker.PickerView
            android:id="@+id/dpv_day_from"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <com.jgkj.grb.view.datepicker.PickerView
            android:id="@+id/dpv_hour_from"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_hour_unit_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="时"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:visibility="gone" />

        <com.jgkj.grb.view.datepicker.PickerView
            android:id="@+id/dpv_minute_from"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_minute_unit_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="分"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>