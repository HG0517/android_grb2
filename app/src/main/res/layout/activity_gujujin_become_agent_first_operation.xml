<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".ui.gujujin.activity.GujujinBecomeAgentFirstOperationActivity">

    <include layout="@layout/widget_toolbar" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/become_agent_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:minHeight="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topPanel"
        app:layout_constraintVertical_bias="0">

        <TextView
            android:id="@+id/become_agent_speed_tv_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/gujujin_become_agent_step_0"
            android:textColor="@drawable/become_agent_speed_text_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/become_agent_speed_tv_1"
            app:layout_constraintTop_toBottomOf="@+id/become_agent_speed_iv_0"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/become_agent_speed_tv_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/gujujin_become_agent_step_1"
            android:textColor="@drawable/become_agent_speed_text_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/become_agent_speed_tv_0"
            app:layout_constraintRight_toLeftOf="@+id/become_agent_speed_tv_2"
            app:layout_constraintTop_toTopOf="@+id/become_agent_speed_tv_0"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/become_agent_speed_tv_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/gujujin_become_agent_step_2"
            android:textColor="@drawable/become_agent_speed_text_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/become_agent_speed_tv_1"
            app:layout_constraintRight_toLeftOf="@+id/become_agent_speed_tv_3"
            app:layout_constraintTop_toTopOf="@+id/become_agent_speed_tv_0"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/become_agent_speed_tv_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/gujujin_become_agent_step_3"
            android:textColor="@drawable/become_agent_speed_text_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/become_agent_speed_tv_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/become_agent_speed_tv_0"
            app:layout_constraintVertical_bias="0" />

        <View
            android:id="@+id/become_agent_speed_line_0"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E8E6E6"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/become_agent_speed_iv_0"
            app:layout_constraintLeft_toLeftOf="@+id/become_agent_speed_iv_0"
            app:layout_constraintRight_toRightOf="@+id/become_agent_speed_iv_1"
            app:layout_constraintTop_toTopOf="@+id/become_agent_speed_iv_0" />

        <View
            android:id="@+id/become_agent_speed_line_1"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E8E6E6"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/become_agent_speed_iv_0"
            app:layout_constraintLeft_toLeftOf="@+id/become_agent_speed_iv_1"
            app:layout_constraintRight_toRightOf="@+id/become_agent_speed_iv_2"
            app:layout_constraintTop_toTopOf="@+id/become_agent_speed_iv_0" />

        <View
            android:id="@+id/become_agent_speed_line_2"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E8E6E6"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/become_agent_speed_iv_0"
            app:layout_constraintLeft_toLeftOf="@+id/become_agent_speed_iv_2"
            app:layout_constraintRight_toRightOf="@+id/become_agent_speed_iv_3"
            app:layout_constraintTop_toTopOf="@+id/become_agent_speed_iv_0" />

        <ImageView
            android:id="@+id/become_agent_speed_iv_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/become_agent_speed_select_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/become_agent_speed_tv_0"
            app:layout_constraintRight_toRightOf="@+id/become_agent_speed_tv_0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <ImageView
            android:id="@+id/become_agent_speed_iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/become_agent_speed_select_2"
            app:layout_constraintBottom_toBottomOf="@+id/become_agent_speed_iv_0"
            app:layout_constraintLeft_toLeftOf="@+id/become_agent_speed_tv_1"
            app:layout_constraintRight_toRightOf="@+id/become_agent_speed_tv_1"
            app:layout_constraintTop_toTopOf="@+id/become_agent_speed_iv_0" />

        <ImageView
            android:id="@+id/become_agent_speed_iv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/become_agent_speed_select_3"
            app:layout_constraintBottom_toBottomOf="@+id/become_agent_speed_iv_0"
            app:layout_constraintLeft_toLeftOf="@+id/become_agent_speed_tv_2"
            app:layout_constraintRight_toRightOf="@+id/become_agent_speed_tv_2"
            app:layout_constraintTop_toTopOf="@+id/become_agent_speed_iv_0" />

        <ImageView
            android:id="@+id/become_agent_speed_iv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/become_agent_speed_select_4"
            app:layout_constraintBottom_toBottomOf="@+id/become_agent_speed_iv_0"
            app:layout_constraintLeft_toLeftOf="@+id/become_agent_speed_tv_3"
            app:layout_constraintRight_toRightOf="@+id/become_agent_speed_tv_3"
            app:layout_constraintTop_toTopOf="@+id/become_agent_speed_iv_0" />
    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8F8"
        app:layout_constraintBottom_toBottomOf="@+id/become_agent_speed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/become_agent_speed"
        app:layout_constraintVertical_bias="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:minHeight="66dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userhead"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@mipmap/ic_default_head" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/userhead"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintLeft_toRightOf="@+id/userhead"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/userhead"
                    tools:text="公让宝" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:minHeight="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/gujujin_become_agent_product"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/selection_level_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/gujujin_become_agent_product_name"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:minHeight="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/gujujin_become_agent_level"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/selection_level_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:drawableLeft="@mipmap/ic_gujvjin_daili_31"
                    tools:text="省级代理" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:minHeight="44dp">

                <TextView
                    android:id="@+id/become_agent_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0"
                    tools:text="成为省级代理需要您支付" />

                <TextView
                    android:id="@+id/become_agent_tip_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/become_agent_tip"
                    app:layout_constraintVertical_bias="0"
                    tools:text="1000万份GRB" />
            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/submission"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="55dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#F53C5E"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/become_agent_qualifications_tip"
                app:layout_constraintVertical_bias="0">

                <TextView
                    android:id="@+id/submission_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="@string/gujujin_become_agent_sure_1"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>