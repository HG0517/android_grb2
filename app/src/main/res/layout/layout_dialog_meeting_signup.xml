<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/convention_signup_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:src="@mipmap/ic_convention_signup_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <com.jgkj.grb.view.textview.BoldTextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:drawableLeft="@mipmap/ic_convention_signup_top_left"
        android:drawableRight="@mipmap/ic_convention_signup_top_right"
        android:drawablePadding="6dp"
        android:text="@string/centre_dialog_title"
        android:textColor="#786558"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/convention_signup_bg"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintLeft_toLeftOf="@+id/convention_signup_bg"
        app:layout_constraintRight_toRightOf="@+id/convention_signup_bg"
        app:layout_constraintTop_toTopOf="@+id/convention_signup_bg"
        app:layout_constraintVertical_bias="0" />

    <com.jgkj.grb.view.textview.BoldTextView
        android:id="@+id/dialog_tip_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/centre_dialog_tip_0"
        android:textColor="#786558"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/convention_signup_bg"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintLeft_toLeftOf="@+id/convention_signup_bg"
        app:layout_constraintRight_toRightOf="@+id/convention_signup_bg"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title"
        app:layout_constraintVertical_bias="0" />

    <com.jgkj.grb.view.textview.BoldTextView
        android:id="@+id/dialog_tip_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/centre_dialog_tip_1"
        android:textColor="#786558"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/convention_signup_bg"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_tip_0"
        app:layout_constraintRight_toRightOf="@+id/convention_signup_bg"
        app:layout_constraintTop_toBottomOf="@+id/dialog_tip_0"
        app:layout_constraintVertical_bias="0" />

    <com.jgkj.grb.view.textview.BoldTextView
        android:id="@+id/dialog_tip_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="#7D7773"
        android:textIsSelectable="true"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_tip_1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/dialog_tip_1"
        app:layout_constraintRight_toRightOf="@+id/convention_signup_bg"
        app:layout_constraintTop_toTopOf="@+id/dialog_tip_1"
        tools:text="02135" />

    <com.jgkj.grb.view.textview.BoldTextView
        android:id="@+id/dialog_tip_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/centre_dialog_tip_3"
        android:textColor="#786558"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/convention_signup_bg"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_tip_0"
        app:layout_constraintRight_toRightOf="@+id/convention_signup_bg"
        app:layout_constraintTop_toBottomOf="@+id/dialog_tip_1"
        app:layout_constraintVertical_bias="0" />

    <android.support.v7.widget.CardView
        android:id="@+id/convention_signup_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="70dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#FFD7A0"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/convention_signup_bg"
        app:layout_constraintVertical_bias="0">

        <com.jgkj.grb.view.textview.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/centre_dialog_sure"
            android:textColor="#7C3D0B"
            android:textSize="17sp" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
