<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recharge_select_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/recharge_select_ll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_select_recharge"
        android:clickable="false"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recharge_select_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textColor="#333333"
            android:textSize="15sp"
            tools:text="充5000元" />

        <TextView
            android:id="@+id/recharge_select_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:textColor="#F9567E"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="(50%GRC+50%人民币)" />
    </LinearLayout>
</android.support.v7.widget.CardView>
