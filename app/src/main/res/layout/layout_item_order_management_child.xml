<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="false">

    <android.support.v7.widget.CardView
        android:id="@+id/cloud_order_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="false"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <ImageView
            android:id="@+id/cloud_order_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:adjustViewBounds="true"
            android:clickable="false"
            tools:src="@mipmap/ic_layout_empty_shop_cart" />

        <ImageView
            android:id="@+id/cloud_order_rush_tip"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="bottom|center_horizontal"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:src="@mipmap/ic_cart_shop_flash_sale" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/cloud_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:clickable="false"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/cloud_order_cv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cloud_order_cv"
        app:layout_constraintVertical_bias="0"
        tools:text="西红柿新鲜番茄自然熟非有机水果沙田水嫩西红柿新鲜番茄自然熟非有机水果沙田水嫩西红柿新鲜番茄自然熟非有机水果沙田水嫩" />

    <TextView
        android:id="@+id/cloud_order_specs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:clickable="false"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:textColor="#666666"
        android:textSize="13sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/cloud_order_cv"
        app:layout_constraintRight_toLeftOf="@+id/cloud_order_number"
        app:layout_constraintTop_toBottomOf="@+id/cloud_order_name"
        app:layout_constraintVertical_bias="0"
        tools:text="沙瓤番茄2kg" />

    <TextView
        android:id="@+id/cloud_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:clickable="false"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:textColor="#333333"
        android:textSize="15sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/cloud_order_specs"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cloud_order_specs"
        app:layout_constraintVertical_bias="0"
        tools:text="X" />

    <com.jgkj.grb.view.textview.BoldTextView
        android:id="@+id/total_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:textColor="#F74B70"
        android:textSize="15sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/cloud_order_cv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cloud_order_specs"
        app:layout_constraintVertical_bias="0"
        tools:text="@string/total_top_text" />

    <com.jgkj.grb.view.textview.BoldTextView
        android:id="@+id/total_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="20dp"
        android:clickable="false"
        android:drawableLeft="@mipmap/ic_grb"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:textColor="#F74B70"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/total_top"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/total_top"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/total_top"
        tools:text="@string/total_bottom_text" />

    <FrameLayout
        android:id="@+id/cloud_order_action_red"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_shape_cloud_immediate_delivery"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:minWidth="80dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cloud_order_cv"
        app:layout_constraintVertical_bias="0"
        tools:visibility="visible">

        <TextView
            android:id="@+id/cloud_order_action_red_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:gravity="center"
            android:textColor="#F74B70"
            android:textSize="13sp"
            tools:text="立即提货" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/cloud_order_action_gray"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_shape_cloud_apply_refund"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:minWidth="80dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cloud_order_action_red"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cloud_order_cv"
        app:layout_constraintVertical_bias="0"
        tools:visibility="visible">

        <TextView
            android:id="@+id/cloud_order_action_gray_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="13sp"
            tools:text="申请退款" />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
